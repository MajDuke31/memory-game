<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/padding_sixteen"
    android:paddingRight="@dimen/padding_sixteen"
    android:paddingBottom="@dimen/padding_sixteen"
    tools:context=".MemoryGame"
    android:background="@android:color/white"
    android:id="@+id/relativeLayout">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/correct_guesses_text"
        android:id="@+id/correctGuessesTextView"
        android:layout_marginLeft="@dimen/padding_ten"
        android:textColor="@android:color/black"
        android:textSize="@dimen/correct_guesses_text_size"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/incorrect_guesses_text"
        android:id="@+id/incorrectGuessesTextView"
        android:layout_toRightOf="@+id/correctGuessesTextView"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/padding_ten"
        android:gravity="right"
        android:textColor="@android:color/black"
        android:textSize="@dimen/incorrect_guesses_text_size"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/squaresLinearLayout"
        android:orientation="horizontal"
        android:layout_margin="@dimen/padding_ten"
        android:layout_alignBaseline="@+id/incorrectGuessesTextView">
        <GridView
            android:id="@+id/squaresGridView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:columnWidth="@dimen/squares_grid_view_column_width"
            android:numColumns="4"
            android:stretchMode="columnWidth"
            android:gravity="center"
            android:layout_marginTop="@dimen/padding_ten" />
    </LinearLayout>
</RelativeLayout>
